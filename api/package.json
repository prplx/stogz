{
  "name": "stigz-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src -e ts,tsx --exec ts-node --files src/server.ts",
    "build-ts": "tsc",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "ts-node --files src/server.ts",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "test": "jest",
    "db:migrate": "prisma migrate dev --preview-feature"
  },
  "engines": {
    "node": "14.15.0"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@prisma/client": "2.15.0",
    "apollo-datasource-rest": "^0.9.7",
    "apollo-server-koa": "^2.19.2",
    "axios": "^0.21.1",
    "env-guard": "^1.0.3",
    "jwks-rsa": "^1.12.2",
    "koa": "^2.13.1",
    "koa-jwt": "^4.0.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.29.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.15.0",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.7",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
